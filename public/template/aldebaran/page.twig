{% extends 'layout.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-8 blog-main">
            <div class="blog-post">
                {% if post %}
                    <h2 class="blog-post-title">{{ post.title | raw }}</h2>
                    <p>{{ post.content | raw }}</p>
                {% else %}
                    <p>Page not found!</p>
                {% endif %}
            </div>
        </div>
        {% include 'sidebar.twig' %}
    </div>
{% endblock %}
